        <br>
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                {{ form_label(form.transporterChoiceDate) }}
                {{ form_widget(form.transporterChoiceDate, {'attr': {'class': ' round-form '}}) }}
            </div>
        </div>
        <br>
     <div class="row">
        <div class="col">
            {{ form_label(form.orderState) }}
            {{ form_widget(form.orderState, {'attr': {'class': 'form-control round-form'}}) }}

        </div>
        <br>
        <div class="row">
            <div class="col">
                {{ form_label(form.transporterState) }}
                {{ form_widget(form.transporterState, {'attr': {'class': 'form-control round-form'}}) }}
            </div>
        </div>
        <br>
        <center>
            <div class="row">
                <div class="col">
                    {{ form_widget(form.valider, {'attr': {'class': 'btn btn-theme'}}) }}
                </div>
            </div>
        </center>
        {{ form_end(form) }}
    </div>
