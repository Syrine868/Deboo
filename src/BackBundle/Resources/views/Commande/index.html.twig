                            <td>{{ c.orderDate | date('Y-m-d') }}</td>
                            <td><img src="{{ asset('images/load.gif') }}" style="height: 20px" alt=""></td>
                            <td>{{ c.orderState }}</td>
                            <td><img src="{{ asset('images/load.gif') }}" style="height: 20px" alt=""></td>
                            <td>{{ c.paymentState }}</td>
                            <td>{{ c.total }} DT</td>
                            <td>{{ c.id.username}}</td>

